<!DOCTYPE html>
<html>
<%- include('./partials/_head'); %>


  <body>
    <%- include('./partials/_navbar'); %>
      <div class="container">

        <h1>
          <%= title %>
        </h1>
        <p>Welcome to <%= title %> page</p>

        <div>
          <form id="filters-form" class="row g-3" action="/users">
            <div class="col-auto">
              <div class="input-group mb-3">
                <div class="input-group-prepend">
                  <span class="input-group-text" id="basic-addon1">Search</i></span>
                </div>
                <input type="text" class="form-control" placeholder="Username" aria-label="Username"
                  aria-describedby="basic-addon1" name="userName">
              </div>
            </div>

            <div class="col-auto">
              <select class="form-select" aria-label="Default select example" multiple name="cities[]">
                <option selected disabled>Select City</option>
                <% for(var i=0; i < cities.length; i++) {%>
                  <option value=" <%= cities[i] %>">
                    <%= cities[i] %>
                  </option>

                  <% } %>
              </select>
            </div>

            <div class="col-auto">
              <button type="submit" class="btn btn-primary btn-danger mb-3">Filter</button>
            </div>
          </form>
          <div style="color: red; visibility: hidden;" id="user-name-error">User name must be between 4 and 100 characters</div>

        </div>


        <ol class="list-group list-group-numbered">

          <% for(var i=0; i < users.length; i++) {%>

            <li class="list-group-item d-flex justify-content-between align-items-start">
              <div class="ms-2 me-auto">
                <div class="fw-bold">
                  <%= users[i].name %>
                </div>
                <%= users[i].username %>
              </div>
            </li>

            <% } %>

        </ol>
      </div>
      <script src="/js/users.js"></script>
  </body>

</html>